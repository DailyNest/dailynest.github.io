---
import { SITE } from "@/lib/config";
import Head from "@/components/bases/head.astro";
import Header from "@/components/shared/header.astro";
import Footer from "@/components/shared/footer.astro";
import CookieConsent from "@/components/shared/cookie-consent.astro";
import type { Entry } from "@/lib/types";
import { getMeta } from "@/lib/utils/getMeta";

type Props = {
  entry: Entry;
};

const { entry } = Astro.props;

const meta = await getMeta(entry);
---

<!doctype html>
<html lang={meta.lang || SITE.locale} dir={SITE.dir}>
  <Head meta={meta} />
  <body class="flex flex-col">
    <!-- Google Tag Manager (noscript) -->
    {
      import.meta.env.PUBLIC_GTM_ID && (
        <noscript>
          <iframe
            src={`https://www.googletagmanager.com/ns.html?id=${import.meta.env.PUBLIC_GTM_ID}`}
            height="0"
            width="0"
            style="display:none;visibility:hidden"
          />
        </noscript>
      )
    }
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
    <CookieConsent />
  </body>
</html>
