---
import Github from "@/assets/svgs/github.astro";
import Search01 from "@/assets/svgs/search-01.astro";
import MenuDropdown from "./menu-dropdown.astro";
import { SITE } from "@/lib/config";
import ThemeController from "../bases/theme-controller.astro";
---

<div
  class="navbar border-b border-primary-content/80 dark:border-primary-content/20"
>
  <div class="navbar-start lg:w-1/2">
    <div class="lg:hidden">
      <MenuDropdown />
    </div>
    <a class="site-brand text-xl px-2 text-nowrap lg:hidden" href="/"
      >{SITE.title}</a
    >
  </div>
  <div class="navbar-center hidden lg:flex">
    <a class="site-brand text-xl px-2" href="/">{SITE.title}</a>
  </div>
  <div class="navbar-end">
    <ThemeController />
    <a
      class="btn btn-sm btn-primary hidden md:inline-flex mr-2"
      href="/articles/how-to-contribute-and-add-articles-to-daily-nest"
    >
      Contribute
    </a>
    <a class="btn btn-ghost btn-circle" href="/search" aria-label="Search">
      <Search01 />
    </a>
    <a
      class="btn btn-ghost btn-circle"
      href={SITE.github}
      target="_blank"
      aria-label="GitHub"
    >
      <Github />
    </a>
  </div>
</div>
