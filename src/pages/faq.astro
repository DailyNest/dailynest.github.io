---
import ContentLayout from "@/layouts/content.astro";
import BaseLayout from "@/layouts/base.astro";
import { getEntry, render } from "astro:content";

const entry = await getEntry("views", "faq");

if (!entry) {
  return Astro.redirect("/404");
}

const { Content } = await render(entry);
---

<BaseLayout entry={entry}>
  <ContentLayout>
    <Content />
  </ContentLayout>
  
  <!-- FAQ structured data -->
  <script type="application/ld+json">
    {JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'FAQPage',
      mainEntity: [
        {
          '@type': 'Question',
          name: 'What is DailyNest?',
          acceptedAnswer: { '@type': 'Answer', text: 'DailyNest is a content-first publication covering technology, programming, productivity, lifestyle, and more.' },
        },
        {
          '@type': 'Question',
          name: 'How can I contribute an article?',
          acceptedAnswer: { '@type': 'Answer', text: 'Fork the repository on GitHub, add your article under src/content/articles, and open a pull request.' },
        },
        {
          '@type': 'Question',
          name: 'Can I use external images in articles?',
          acceptedAnswer: { '@type': 'Answer', text: 'Yes. You can provide a thumbnail URL in the frontmatter and embed images directly in the Markdown content.' },
        },
        {
          '@type': 'Question',
          name: 'Where can I find the RSS feed?',
          acceptedAnswer: { '@type': 'Answer', text: 'The RSS feed is available at /rss.xml.' },
        },
      ],
    })}
  </script>
</BaseLayout>
