RUN_KEYSTATIC=false

# Build environment (development or production)
PUBLIC_BUILD_ENV=development

# Google AdSense configuration
PUBLIC_GOOGLE_ADSENSE_CLIENT_ID=ca-pub-XXXXXXXXXXXXXXXXXXXXX

# Google Site Verification
PUBLIC_GOOGLE_SITE_VERIFICATION=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Google Tag Manager configuration
PUBLIC_GTM_ID=GTM-XXXXXXXXX

# Google Analytics configuration
PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Giscus configuration (public runtime)
# Create these in GitHub Discussions settings for the repository
PUBLIC_GISCUS_REPO=DailyNest/dailynest.github.io
# Numeric Repo ID from Giscus setup page
PUBLIC_GISCUS_REPO_ID=
# Discussion category name (e.g., Comments)
PUBLIC_GISCUS_CATEGORY=Comments
# Category ID from Giscus setup page
PUBLIC_GISCUS_CATEGORY_ID=

# Optional tweaks
PUBLIC_GISCUS_MAPPING=pathname
PUBLIC_GISCUS_STRICT=1
PUBLIC_GISCUS_REACTIONS_ENABLED=1
PUBLIC_GISCUS_EMIT_METADATA=0
PUBLIC_GISCUS_INPUT_POSITION=bottom
# Use "preferred_color_scheme" to auto-switch light/dark
PUBLIC_GISCUS_THEME=preferred_color_scheme
PUBLIC_GISCUS_LANG=en